{% doc %}
  @prompt
    make one block for three icons of the organic, good for health , no pastisties 
    we use this image 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-features-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.padding }}px 0;
  }

  .ai-product-features__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.gap }}px;
    width: 100%;
  }

  .ai-product-features__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: {{ block.settings.icon_text_gap }}px;
  }

  .ai-product-features__icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    padding: {{ block.settings.icon_padding }}px;
  }

  .ai-product-features__icon-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-product-features__icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
  }

  .ai-product-features__icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-features__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
    font-weight: {{ block.settings.text_weight }};
  }

  @media screen and (max-width: 749px) {
    .ai-product-features__container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-product-features__icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size_mobile }}px;
      height: {{ block.settings.icon_size_mobile }}px;
    }

    .ai-product-features__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }
  }
{% endstyle %}

<product-features-{{ ai_gen_id }} class="ai-product-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-features__container-{{ ai_gen_id }}">
    <div class="ai-product-features__item-{{ ai_gen_id }}">
      <div class="ai-product-features__icon-wrapper-{{ ai_gen_id }}">
        {% if block.settings.icon_1 %}
          <img
            src="{{ block.settings.icon_1 | image_url: width: 200 }}"
            alt="{{ block.settings.text_1 | escape }}"
            class="ai-product-features__icon-{{ ai_gen_id }}"
            loading="lazy"
            width="200"
            height="200"
          >
        {% else %}
          <div class="ai-product-features__icon-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      {% if block.settings.text_1 != blank %}
        <div class="ai-product-features__text-{{ ai_gen_id }}">{{ block.settings.text_1 }}</div>
      {% endif %}
    </div>

    <div class="ai-product-features__item-{{ ai_gen_id }}">
      <div class="ai-product-features__icon-wrapper-{{ ai_gen_id }}">
        {% if block.settings.icon_2 %}
          <img
            src="{{ block.settings.icon_2 | image_url: width: 200 }}"
            alt="{{ block.settings.text_2 | escape }}"
            class="ai-product-features__icon-{{ ai_gen_id }}"
            loading="lazy"
            width="200"
            height="200"
          >
        {% else %}
          <div class="ai-product-features__icon-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      {% if block.settings.text_2 != blank %}
        <div class="ai-product-features__text-{{ ai_gen_id }}">{{ block.settings.text_2 }}</div>
      {% endif %}
    </div>

    <div class="ai-product-features__item-{{ ai_gen_id }}">
      <div class="ai-product-features__icon-wrapper-{{ ai_gen_id }}">
        {% if block.settings.icon_3 %}
          <img
            src="{{ block.settings.icon_3 | image_url: width: 200 }}"
            alt="{{ block.settings.text_3 | escape }}"
            class="ai-product-features__icon-{{ ai_gen_id }}"
            loading="lazy"
            width="200"
            height="200"
          >
        {% else %}
          <div class="ai-product-features__icon-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      {% if block.settings.text_3 != blank %}
        <div class="ai-product-features__text-{{ ai_gen_id }}">{{ block.settings.text_3 }}</div>
      {% endif %}
    </div>
  </div>
</product-features-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductFeatures{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('product-features-{{ ai_gen_id }}', ProductFeatures{{ ai_gen_id }});
  })();
</script>

