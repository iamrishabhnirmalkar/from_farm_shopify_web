<!-- Media Coverage Section -->
<section
  class="media-coverage"
  style="padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0; background-color: {{ section.settings.background_color }};"
>
  <div class="media-coverage__container">
    <h2 class="media-coverage__title" style="color: {{ section.settings.title_color }}; font-size: {{ section.settings.heading_font_size }}px;">
      {{ section.settings.title }}
    </h2>
    <div class="media-coverage__wrapper">
      <div class="media-coverage__logos" id="logoContainer-{{ section.id }}">
        {% for block in section.blocks %}
          <div class="media-coverage__logo" {{ block.shopify_attributes }}>
            <div class="logo-container">
              <div class="logo-text">
                {% if block.settings.logo_image %}
                  {{
                    block.settings.logo_image
                    | image_url: width: 200
                    | image_tag: alt: block.settings.logo_alt, class: 'logo-image'
                  }}
                {% else %}
                   <p class="logo-brand" style="color: {{ section.settings.text_color }}">{{ block.settings.logo_text }}</p>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .media-coverage {
    width: 100%;
  }

  .media-coverage__container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 70px;
  }

  .media-coverage__title {
    font-weight: 700;
    text-align: center;
    margin: 0 0 60px 0;
    letter-spacing: 2px;
  }

  .media-coverage__wrapper {
    overflow: hidden;
    position: relative;
  }

  .media-coverage__logos {
    display: flex;
    align-items: center;
    gap: 30px;
    transition: transform 0.8s ease;
  }

  .media-coverage__logos.sliding {
    animation: autoSlide 20s linear infinite;
  }

  .media-coverage__logo {
    flex: 0 0 auto;
    min-width: 200px;
  }

  .logo-container {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 82px;
    padding: 20px;
  }

  .logo-image {
    max-width: 100%;
    max-height: 50px;
    object-fit: contain;
    display: block;
  }

  .logo-brand {
    font-size: 18px;
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: 4px;
    margin: 0;
  }

  @keyframes autoSlide {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% - 30px));
    }
  }

  /* Tablet Styles */
  @media (max-width: 1024px) {
    .media-coverage__container {
      padding: 0 40px;
    }

    .media-coverage__title {
      margin-bottom: 40px;
    }

    .media-coverage__logos {
      gap: 20px;
    }

    .media-coverage__logo {
      min-width: 180px;
    }

    .logo-container {
      height: 70px;
      padding: 15px;
    }

    .logo-image {
      max-height: 40px;
    }

    .logo-brand {
      font-size: 16px;
    }
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .media-coverage {
      padding: 30px 0 !important;
    }

    .media-coverage__container {
      padding: 0 20px;
    }

    .media-coverage__title {
      margin-bottom: 30px;
    }

    .media-coverage__logos {
      gap: 15px;
    }

    .media-coverage__logo {
      min-width: 150px;
    }

    .logo-container {
      height: 60px;
      padding: 12px;
    }

    .logo-image {
      max-height: 30px;
    }

    .logo-brand {
      font-size: 14px;
    }
  }

  /* Small Mobile Styles */
  @media (max-width: 480px) {
    .media-coverage__container {
      padding: 0 15px;
    }

    .media-coverage__title {
      letter-spacing: 1px;
    }

    .logo-container {
      height: 55px;
      padding: 10px;
    }

    .logo-image {
      max-height: 25px;
    }

    .media-coverage__logo {
      min-width: 130px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const logoContainer = document.getElementById('logoContainer-{{ section.id }}');
    const logos = logoContainer.querySelectorAll('.media-coverage__logo');

    // Check if there are more than 5 logos
    if (logos.length > 5) {
      // Duplicate the logos for seamless looping
      const originalLogos = Array.from(logos);
      originalLogos.forEach((logo) => {
        const clone = logo.cloneNode(true);
        logoContainer.appendChild(clone);
      });

      // Add sliding class to start animation
      logoContainer.classList.add('sliding');

      // Pause animation on hover
      logoContainer.addEventListener('mouseenter', function () {
        this.style.animationPlayState = 'paused';
      });

      // Resume animation when not hovering
      logoContainer.addEventListener('mouseleave', function () {
        this.style.animationPlayState = 'running';
      });
    } else {
      // If 5 or fewer logos, center them and don't slide
      logoContainer.style.justifyContent = 'center';
      logoContainer.style.flexWrap = 'wrap';
    }
  });
</script>

