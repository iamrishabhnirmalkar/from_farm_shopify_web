        { "type": "logo", "settings": { "logo_text": "Media 2" } },
        { "type": "logo", "settings": { "logo_text": "Media 3" } },
        { "type": "logo", "settings": { "logo_text": "Media 4" } },
        { "type": "logo", "settings": { "logo_text": "Media 5" } }
      ]
    }
  ]
}
