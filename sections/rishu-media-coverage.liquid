<!-- Media Coverage Section -->
<section
  class="media-coverage"
  style="padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0; background-color: {{ section.settings.background_color }};{% if section.settings.bg_image != blank %}background-image: url('{{ section.settings.bg_image | image_url: width: 2000 }}'); background-size: cover; background-position: center;{% endif %}"
>
  <div class="media-coverage__container">
    <h2 class="media-coverage__title" style="color: {{ section.settings.title_color }};">
      {{ section.settings.title }}
    </h2>
    <div class="media-coverage__wrapper">
      <div class="media-coverage__logos" id="logoContainer-{{ section.id }}">
        {% for block in section.blocks %}
          <div class="media-coverage__logo" {{ block.shopify_attributes }}>
            <div class="logo-container">
              <div class="logo-text">
                {% if block.settings.logo_image %}
                  {{
                    block.settings.logo_image
                    | image_url: width: 200
                    | image_tag: alt: block.settings.logo_alt, class: 'logo-image'
                  }}
                {% else %}
                  <span class="logo-brand">{{ block.settings.logo_text }}</span>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .media-coverage {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .media-coverage__container {
    width: 100%;
    padding: 0 20px;
  }

  .media-coverage__title {
    font-size: 32px;
    font-weight: 700;
    text-align: center;
    margin: 0 0 60px 0;
    letter-spacing: 2px;
  }

  .media-coverage__wrapper {
    overflow: hidden;
    position: relative;
    width: 100%;
  }

  .media-coverage__logos {
    display: flex;
    align-items: center;
    gap: 30px;
    transition: transform 0.8s ease;
    width: fit-content;
  }

  .media-coverage__logos.sliding {
    animation: autoSlide 20s linear infinite;
  }

  .media-coverage__logo {
    flex: 0 0 auto;
    width: 200px; /* Fixed width container */
    height: 100px; /* Fixed height container */
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding: 10px;
  }

  .logo-image {
    width: 100%;
    height: 100%;
    object-fit: contain; /* Ensures any logo size fits within the box */
    display: block;
  }

  .logo-brand {
    font-size: 18px;
    font-weight: 600;
    color: #333;
    line-height: 1.2;
    margin-bottom: 4px;
    text-align: center;
  }

  @keyframes autoSlide {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-50%)); /* Move half way assuming duplicate content */
    }
  }

  /* Tablet Styles */
  @media (max-width: 1024px) {
    .media-coverage__title {
      font-size: 28px;
      margin-bottom: 40px;
    }

    .media-coverage__logo {
        width: 160px;
        height: 80px;
    }
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .media-coverage {
      padding: 30px 0 !important;
    }

    .media-coverage__title {
      font-size: 24px !important;
      margin-bottom: 30px;
    }

    .media-coverage__logos {
      gap: 15px;
    }

    .media-coverage__logo {
        width: 120px;
        height: 60px;
    }
  }

  /* Small Mobile Styles */
  @media (max-width: 480px) {
    .media-coverage__title {
      font-size: 20px !important;
      letter-spacing: 1px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const logoContainer = document.getElementById('logoContainer-{{ section.id }}');
    const logos = logoContainer.querySelectorAll('.media-coverage__logo');

    // Always duplicate for safe infinite scroll if enough items exist or force it
    if (logos.length > 0) {
      // Duplicate x2 to ensure smooth infinite loop
      const originalLogos = Array.from(logos);
      originalLogos.forEach((logo) => {
        const clone = logo.cloneNode(true);
        logoContainer.appendChild(clone);
      });
      // And maybe one more time if few items
       if(logos.length < 5) {
          originalLogos.forEach((logo) => {
            const clone = logo.cloneNode(true);
            logoContainer.appendChild(clone);
          });
       }

      // Add sliding class to start animation
      logoContainer.classList.add('sliding');

      // Pause animation on hover
      logoContainer.addEventListener('mouseenter', function () {
        this.style.animationPlayState = 'paused';
      });

      // Resume animation when not hovering
      logoContainer.addEventListener('mouseleave', function () {
        this.style.animationPlayState = 'running';
      });
    }
  });
</script>

