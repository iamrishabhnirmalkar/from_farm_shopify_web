<footer class="rishu-footer" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="rishu-footer-container">
    <div class="rishu-footer-grid">
      
      {%- comment -%} Column 1: Logo & Subscription {%- endcomment -%}
      <div class="rishu-footer-col rishu-footer-brand">
        {%- if section.settings.logo != blank -%}
          <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" class="rishu-footer-logo">
        {%- else -%}
          <h2 class="rishu-footer-logo-text">{{ shop.name }}</h2>
        {%- endif -%}
        
        {%- if section.settings.show_subscription -%}
          <div class="rishu-footer-subscription">
            <h3 class="rishu-footer-sub-heading">{{ section.settings.subscription_heading }}</h3>
            <p class="rishu-footer-sub-text">{{ section.settings.subscription_text }}</p>
            
            <form method="post" action="/contact#footer-newsletter" id="footer-newsletter" accept-charset="UTF-8" class="rishu-footer-form">
              <input type="hidden" name="form_type" value="customer">
              <input type="hidden" name="utf8" value="âœ“">
              <input type="hidden" name="contact[tags]" value="newsletter">
              
              <div class="rishu-footer-form-group">
                <input 
                  type="email" 
                  name="contact[email]" 
                  id="footer-email" 
                  placeholder="{{ section.settings.email_placeholder }}"
                  class="rishu-footer-input"
                  required
                  autocomplete="email"
                >
                <button type="submit" class="rishu-footer-submit" style="background-color: {{ section.settings.button_color }};">
                  {{ section.settings.button_text }}
                </button>
              </div>
            </form>
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} Link Columns {%- endcomment -%}
      {%- for block in section.blocks -%}
        {%- if block.type == 'link_list' -%}
          <div class="rishu-footer-col rishu-footer-links" {{ block.shopify_attributes }}>
            <h4 class="rishu-footer-heading">{{ block.settings.heading }}</h4>
            <ul class="rishu-footer-menu">
              {%- for i in (1..5) -%}
                {%- assign link_label = 'link_label_' | append: i -%}
                {%- assign link_url = 'link_url_' | append: i -%}
                {%- if block.settings[link_label] != blank -%}
                  <li>
                    <a href="{{ block.settings[link_url] }}">{{ block.settings[link_label] }}</a>
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      {%- endfor -%}

      {%- comment -%} Column: Social & Contact {%- endcomment -%}
      <div class="rishu-footer-col rishu-footer-contact">
        {%- if section.settings.show_social -%}
          <h4 class="rishu-footer-heading">{{ section.settings.social_heading }}</h4>
          <div class="rishu-footer-social">
            {%- if section.settings.facebook_url != blank -%}
              <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" aria-label="Facebook">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              </a>
            {%- endif -%}
            {%- if section.settings.instagram_url != blank -%}
              <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" aria-label="Instagram">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
              </a>
            {%- endif -%}
            {%- if section.settings.twitter_url != blank -%}
              <a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener" aria-label="Twitter">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
              </a>
            {%- endif -%}
            {%- if section.settings.youtube_url != blank -%}
              <a href="{{ section.settings.youtube_url }}" target="_blank" rel="noopener" aria-label="YouTube">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if section.settings.show_contact -%}
          <div class="rishu-footer-info">
            {%- if section.settings.address != blank -%}
              <p class="rishu-footer-info-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                {{ section.settings.address }}
              </p>
            {%- endif -%}
            {%- if section.settings.email != blank -%}
              <p class="rishu-footer-info-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
              </p>
            {%- endif -%}
            {%- if section.settings.phone != blank -%}
              <p class="rishu-footer-info-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
              </p>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>

    {%- comment -%} Bottom Farm Illustration {%- endcomment -%}
    {%- if section.settings.bottom_image != blank -%}
      <div class="rishu-footer-bottom-image" style="{% if section.settings.image_overlay_color != blank %}background-color: {{ section.settings.image_overlay_color }};{% endif %}">
        {{ section.settings.bottom_image | image_url: width: 3840 | image_tag: 
          widths: '375, 550, 750, 1100, 1500, 1780, 1920, 2500, 3000, 3840',
          sizes: '100vw',
          class: 'rishu-footer-bottom-img',
          loading: 'lazy',
          alt: 'Footer decoration'
        }}
      </div>
    {%- endif -%}
  </div>
</footer>

